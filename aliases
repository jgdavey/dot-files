alias ls='ls -lAp'
alias ..='cd ..;' # can then do .. .. .. to move up multiple directories.
alias ...='.. ..'
alias g='grep -i'  #case insensitive grep
alias h='history|g'
alias ducks='du -cks * | sort -rn | head -20' # Lists the size of all the folders
alias duh='du -chs *' # Lists the size of all the folders
alias o='open .'

alias home='cd ~' # the tilda is too hard to reach
alias systail='tail -f -n0 /var/log/system.log'
alias aptail='tail -f -n0 /var/log/apache*/*log'
alias b='cd -'

alias sprof='source ~/.bash_profile'

# useful command to find what you should be aliasing:
alias profileme="history 1 | awk '{print \$2}' | awk 'BEGIN{FS=\"|\"}{print \$1}' | sort | uniq -c | sort -n | tail -n 20 | sort -nr"

# rails stuff
alias log='tail -f -0 ./log/*.log'
alias ss='ruby ./script/server'
alias sc='ruby ./script/console'
alias sg='ruby ./script/generate'
alias controller='script/generate controller'
alias migration='script/generate migration'
alias cdm='cap deploy:migrations'
alias model='script/generate model'
alias flush='dscacheutil -flushcache'
alias db='rake db:migrate && rake db:test:prepare'

# replacement netstat cmd to find ports used by apps on OS X
alias netstat="sudo lsof -i -P"

function f() { find * -name $1; }

function extract() {
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xvjf $1    ;;
            *.tar.gz)    tar xvzf $1    ;;
            *.tbz2)      tar xvjf $1    ;;
            *.tgz)       tar xvzf $1    ;;
            *.bz2)       bunzip2 $1     ;;
            *.rar)       unrar x $1     ;;
            *.tar)       tar xvf $1     ;;
            *.gz)        gunzip $1      ;;
            *.zip)       unzip $1       ;;
            *.Z)         uncompress $1  ;;
            *)           echo "'$1' cannot be extracted via >extract<" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}
