ENV["RUBY"] ||= `which ruby`.chomp # Allows RVM ruby version to be used, rather than system default

require 'autotest/growl'

Autotest.add_hook :initialize do |autotest|
  %w{.git .svn .DS_Store ._* vendor/rails tmp doc}.each {|exception| autotest.add_exception(exception) }
  false
end


# Require this last
require 'autotest/fsevent'
